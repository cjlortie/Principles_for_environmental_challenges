isbn = {01678809 (ISSN)},
issn = {01678809},
journal = {Agriculture, Ecosystems and Environment},
keywords = {Agricultural management,Carbon response function,Catch crops,Cover crops,Green manure,Land use,Soil carbon sequestration,meta analysis},
mendeley-tags = {meta analysis},
pages = {33--41},
pmid = {205},
publisher = {Elsevier B.V.},
title = {{Carbon sequestration in agricultural soils via cultivation of cover crops - A meta-analysis}},
