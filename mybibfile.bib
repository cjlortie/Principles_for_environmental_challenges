file = {:C$\backslash$:/Users/Malory/Documents/Courses/EnviroMgmt/Toledo (2014).pdf:pdf},
isbn = {2167-8359},
issn = {2167-8359},
journal = {PeerJ},
keywords = {coast,coastal,coastal dunes,dunes,facilitation,meta,meta analysis,plants,systematic review},
mendeley-tags = {coast,coastal,coastal dunes,dunes,facilitation,meta,meta analysis,plants,systematic review},
pages = {e768},
pmid = {25699214},
title = {{A meta-analysis of plant facilitation in coastal dune systems: responses, regions, and research gaps}},
