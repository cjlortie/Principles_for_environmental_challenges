journal = {Environmental Monitoring and Assessment},
keywords = {Baetis,Diversity,Ephemeroptera,Niger Delta,River Orogodo,Spatiotemporal variations},
number = {1-4},
pages = {581--594},
pmid = {19543701},
title = {{Mayfly (Insecta: Ephemeroptera) community structure as an indicator of the ecological status of a stream in the Niger Delta area of Nigeria}},
volume = {166},
year = {2010}
}
