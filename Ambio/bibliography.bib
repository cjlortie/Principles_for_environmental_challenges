author = {Sandel, Brody},
doi = {10.1111/ecog.01034},
file = {:C$\backslash$:/Users/Malory/Documents/Courses/EnviroMgmt/Supporting Papers/2015{\_}-{\_}{\_}-{\_}Towardsataxonomyofspatialscaledependence[retrieved{\_}2018-10-30].pdf:pdf},
isbn = {1600-0587},
issn = {16000587},
journal = {Ecography},
number = {4},
pages = {358--369},
title = {{Towards a taxonomy of spatial scale-dependence}},
volume = {38},
year = {2015}
}
