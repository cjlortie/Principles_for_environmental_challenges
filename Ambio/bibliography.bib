keywords = {Energy use,Meta-analysis,Meta-regression,Renewable energy source (RES),Willingness-to-pay (WTP),human,meta analysis,willingness to pay},
mendeley-tags = {human,meta analysis,willingness to pay},
pages = {877--887},
publisher = {Elsevier},
title = {{Willingly or grudgingly? A meta-analysis on the willingness-to-pay for renewable energy use}},
url = {http://dx.doi.org/10.1016/j.rser.2015.01.041},
