issn = {10958541},
journal = {Journal of Theoretical Biology},
keywords = {Agent-based model,Common-pool resource,Complex adaptive systems,Cooperation,Fisheries management,Human behavior,Insurance,Risk,Social-ecological systems,Sustainability},
pages = {205--214},
publisher = {Elsevier Ltd},
title = {{Revenue-sharing clubs provide economic insurance and incentives for sustainability in common-pool resource systems}},
url = {https://doi.org/10.1016/j.jtbi.2018.06.003},
