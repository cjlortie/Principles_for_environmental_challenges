issn = {2041210X},
journal = {Methods in Ecology and Evolution},
keywords = {Elliptical vortex,Quasi-geostrophic,Steady-state,Surface},
pages = {777--784},
title = {{Will your paper be used in a meta-analysis? Make the reach of your research broader and longer lasting}},
volume = {8},
year = {2017}
}
@article{Sandel2015,
